---
import Access from "../components/animations/access.astro";
import Layout from "../layouts/Layout.astro";
import Menu from "../components/menu.astro";
import Works from "../components/works.astro";

import { Image } from "astro:assets";
import nakine from "/public/utamachi_nakine.png";
---

<Layout>
  <Access>
    <main>
      <Menu />
      <div class="top-line">
        <div class="logo">SCK</div>
        <div class="line"></div>
      </div>

      <div class="about">
        <!-- <img class="about-img" src={nakine} alt="凪音" /> -->
        <Image src={nakine} alt="凪音" class="about-img" />
        <div class="about-text">
          <h1>詩哭 / Shicoku</h1>
          <p>学生<br />エンジニア / プログラマー</p>
        </div>
      </div>

      <div class="under-line">
        <div class="line"></div>
        <div class="logo">SCK</div>
      </div>

      <div class="works">
        <h1>WORKS</h1>
        <Works />
      </div>
    </main>
  </Access>
</Layout>

<style>
  main {
    font-family: kt;
    opacity: 0;
    animation: fadeInMain 0.5s ease-in 1.4s forwards;
  }

  @keyframes fadeInMain {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .top-line {
    display: flex;
    align-items: center;
    padding: 1rem;
    margin-top: 1rem;
    font-family: boldnese;
  }
  .top-line .logo {
    font-weight: bold;
    font-size: 2rem;
    margin-right: 1rem;
    margin-left: 5rem;
    color: #55ddff;
  }
  .top-line .line {
    flex: 1;
    height: 4px;
    background-color: #55ddff;
    opacity: 0.6;
    margin-right: 80px;
  }
  .under-line {
    display: flex;
    align-items: center;
    padding: 1rem;
    margin-top: 0.5rem;
    font-family: boldnese;
  }
  .under-line .logo {
    font-weight: bold;
    font-size: 2rem;
    margin-right: 80px;
    color: #55ddff;
  }
  .under-line .line {
    flex: 1;
    height: 4px;
    background-color: #55ddff;
    opacity: 0.6;
    margin-right: 1rem;
    margin-left: 5rem;
  }

  .about {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 50px 0;
    gap: 5rem;
  }
  .about-img {
    border: 3px solid #000;
    border-radius: 10px;
    width: 700px;
    height: auto;
  }
  .about-text {
    align-items: flex-start;
  }
  .about-text h1 {
    font-size: 3rem;
    margin-top: 5rem;
  }
  .about-text p {
    font-size: 1.5rem;
    margin-top: 1rem;
  }

  .works {
    text-align: center;
  }
  .works h1 {
    position: relative;
    padding-left: 50px;
    font-family: boldnese;
    font-size: 5rem;
    margin-top: 3rem;
  }
  .works h1::before {
    content: "";
    position: absolute;
    clip-path: polygon(0 0, 0 100%, 30% 100%, 30% 30%, 100% 30%, 100% 0);
    background: #55ddff;
    width: 30px;
    height: 30px;
    top: -10%;
    left: 35%;
  }
  .works h1::after {
    content: "";
    position: absolute;
    clip-path: polygon(0 70%, 0 100%, 100% 100%, 100% 0, 70% 0, 70% 70%);
    background: #55ddff;
    width: 30px;
    height: 30px;
    right: 33%;
    bottom: -10%;
  }

  @media (max-width: 768px) {
    .about {
      flex-direction: column;
      gap: 2rem;
    }
    .about-img {
      width: 100%;
      max-width: 300px;
    }
    .about-text h1 {
      font-size: 2rem;
      margin-top: 2rem;
    }
    .about-text p {
      font-size: 1rem;
    }
  }
</style>
