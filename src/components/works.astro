---
import BuildCard from "/public/works/BuildCard.png";
import UnaExam from "/public/works/una-exam.png";

import { Image } from "astro:assets";
---

<div class="works">
  <h1 class="work-title">WORKS</h1>

  <div class="work-wrapper">
    <button class="arrow-btn left" id="left-btn"></button>

    <div class="work-cards">
      <a
        href="https://str-buildcard.vercel.app/"
        rel="noopener noreferrer"
        target="_blank"
      >
        <div>
          <Image src={BuildCard} alt="BuildCard" />
          <h1>ビルドカード生成機</h1>
          <p>『崩壊: スターレイル』のビルドカードを生成するWebアプリです。</p>
        </div>
      </a>
      <a
        href="https://una-exam.vercel.app/"
        rel="noopener noreferrer"
        target="_blank"
      >
        <div>
          <Image src={UnaExam} alt="UnaExam" />
          <h1>音街ウナ総合学力試験 ホームページ</h1>
          <p>
            響立うなうな学院で主催している『音街ウナ総合学力試験』の公式ホームページ及び試験会場です。
          </p>
        </div>
      </a>
    </div>

    <button class="arrow-btn right" id="right-btn"></button>
  </div>

  <div class="dot">
    <span class="dot-color"></span>
    <span></span>
    <span></span>
  </div>

  <div class="view-button">
    <a href="/works">View More →</a>
  </div>
</div>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }

  .works {
    text-align: center;
  }
  .work-title {
    position: relative;
    padding-left: 50px;
    font-family: boldnese;
    font-size: 3.5rem;
    margin-top: 3rem;
  }
  .work-title::before {
    content: "";
    position: absolute;
    clip-path: polygon(0 0, 0 100%, 30% 100%, 30% 30%, 100% 30%, 100% 0);
    background: #55ddff;
    width: 30px;
    height: 30px;
    top: -10%;
    left: 35%;
  }
  .work-title::after {
    content: "";
    position: absolute;
    clip-path: polygon(0 70%, 0 100%, 100% 100%, 100% 0, 70% 0, 70% 70%);
    background: #55ddff;
    width: 30px;
    height: 30px;
    right: 33%;
    bottom: -10%;
  }

  .work-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .arrow-btn {
    border: none;
    cursor: pointer;
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;

    color: #55ddff;
    line-height: 1;
    width: 1em;
    height: 0.1em;
    background: currentColor;
  }
  .arrow-btn.left::before {
    content: "";
    width: 0.65em;
    height: 0.65em;
    border: 0.1em solid currentColor;
    border-right: 0;
    border-bottom: 0;
    transform: rotate(-45deg);
    transform-origin: top left;
    position: absolute;
    top: 50%;
    left: -0.05em;
    box-sizing: border-box;
  }
  .arrow-btn.right::before {
    content: "";
    width: 0.65em;
    height: 0.65em;
    border: 0.1em solid currentColor;
    border-left: 0;
    border-bottom: 0;
    transform: rotate(45deg);
    transform-origin: top right;
    position: absolute;
    top: 50%;
    right: -0.05em;
    box-sizing: border-box;
  }
  .arrow-btn.left {
    left: 50px;
  }
  .arrow-btn.right {
    right: 50px;
  }
  .arrow-btn:hover::before {
    filter: brightness(0.8);
  }

  .work-cards {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
  }
  .work-cards img {
    width: 100%;
    height: auto;
    border: 1px solid #55ddff;
    border-radius: 10px;
  }
  .work-cards div {
    width: 400px;
    padding: 1rem;
    border: 1px solid #55ddff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
  }
  .work-cards div:hover {
    transform: translateY(-5px);
    transition: transform 0.3s ease;
  }
  .work-cards h1 {
    font-size: 1.3rem;
    margin-top: 1rem;
  }
  .work-cards p {
    font-size: 1rem;
    margin-top: 0.5rem;
  }

  .dot {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 2rem;
  }
  .dot span {
    width: 10px;
    height: 10px;
    border: #55ddff 2px solid;
    border-radius: 50%;
  }
  .dot-color {
    background: #55ddff;
  }

  .view-button {
    position: absolute;
    margin-top: 2rem;
    border: #55ddff 2px solid;
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 30px;
    right: 10%;
  }
  .view-button:hover {
    background: #55ddff;
    color: white;
    transform: translateY(-5px);
    transition:
      background 0.3s ease,
      color 0.3s ease,
      transform 0.3s ease;
  }

  @media (max-width: 768px) {
    .work-title {
      font-size: 2.5rem;
    }
    .work-cards {
      flex-direction: column;
      gap: 1rem;
    }
    .work-cards div {
      width: 100%;
    }

    .work-cards h1 {
      font-size: 1.2rem;
    }
    .work-cards p {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  const leftBtn = document.getElementById("left-btn") as HTMLButtonElement;
  const rightBtn = document.getElementById("right-btn") as HTMLButtonElement;

  let count = 1;

  leftBtn.addEventListener("click", () => {
    if (count != 1) {
      count--;
    }
    updateDots();
  });
  rightBtn.addEventListener("click", () => {
    if (count != 3) {
      count++;
    }
    updateDots();
  });

  function updateDots() {
    const dots = document.querySelectorAll(".dot span");
    dots.forEach((dot, index) => {
      if (index === count - 1) {
        dot.classList.add("dot-color");
      } else {
        dot.classList.remove("dot-color");
      }
    });
  }
</script>
