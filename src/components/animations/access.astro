<div class="animation-overlay">
  <svg class="line-svg" viewBox="0 0 100 100" preserveAspectRatio="none">
    <line
      x1="0"
      y1="50"
      x2="100"
      y2="50"
      stroke="#333"
      stroke-width="0.5"
      pathLength="100"
      class="center-line"></line>
  </svg>

  <div class="curtain curtain-top"></div>
  <div class="curtain curtain-bottom"></div>
</div>

<main class="content">
  <slot />
</main>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: sans-serif;
    overflow: hidden;
  }

  .animation-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 9999;
  }

  .line-svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10001;
  }

  .center-line {
    stroke-dasharray: 100;
    stroke-dashoffset: 100;
    stroke: #fff;
    animation:
      drawCenterLine 0.8s ease-out 0.3s forwards,
      fadeOut 0.3s ease-out 1.2s forwards;
  }

  @keyframes drawCenterLine {
    0% {
      stroke-dashoffset: 100;
    }
    100% {
      stroke-dashoffset: 0;
    }
  }

  .curtain {
    position: absolute;
    left: 0;
    width: 100%;
    height: 50%;
    background: #55ddff;
    z-index: 10000;
  }

  .curtain-top {
    top: 0;
    transform-origin: center bottom;
    animation: splitTop 0.4s ease-in-out 1.1s forwards;
  }

  .curtain-bottom {
    bottom: 0;
    transform-origin: center top;
    animation: splitBottom 0.4s ease-in-out 1.1s forwards;
  }

  @keyframes splitTop {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-100%);
    }
  }

  @keyframes splitBottom {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(100%);
    }
  }

  .content {
    opacity: 0;
    animation: fadeIn 0.5s ease-in 1.1s forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  @keyframes fadeOut {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
</style>

<script>
  setTimeout(() => {
    document.body.style.overflow = "auto";
  }, 2500);
</script>
