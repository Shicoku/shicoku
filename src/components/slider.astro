---
import { Image } from "astro:assets";
import fv1 from "/public/slider/buildcard.png";
import fv2 from "/public/slider/rua-exam.png";
---

<div class="swiper">
  <div class="swiper-wrapper">
    <div class="swiper-slide">
      <a
        href="https://str-buildcard.vercel.app/"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Image src={fv1} alt="Slide 1" />
        <p class="label">スターレイル ビルドカード生成機</p>
      </a>
    </div>
    <div class="swiper-slide">
      <a
        href="https://una-exam.vercel.app/"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Image src={fv2} alt="Slide 2" />
        <p class="label">音街ウナ総合学力試験 ホームページ</p>
      </a>
    </div>
  </div>
  <div class="swiper-pagination"></div>
</div>

<script>
  import Swiper from "swiper";
  import { Navigation, Pagination, Autoplay, EffectFade } from "swiper/modules";

  import "swiper/css";
  import "swiper/css/navigation";
  import "swiper/css/pagination";

  export const swiperConfig = {
    modules: [Autoplay, Navigation, Pagination, EffectFade],
    loop: true,

    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },

    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },

    speed: 2000,
  };

  const swiper = new Swiper(".swiper", swiperConfig);
</script>

<style>
  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px 0;
  }

  .swiper-slide a,
  .swiper-slide img {
    width: 100%;
    display: block;
  }
  .swiper-slide img {
    max-width: 100%;
    height: auto;
    border: 2px solid #000;
  }

  .swiper-slide .label {
    position: absolute;
    bottom: 2px;
    left: 50%;
    transform: translateX(-50%);
    padding: 6px 20px;
    margin-left: 20px;
    width: 100%;
    background: rgba(85, 211, 255, 0.7);
    color: white;
    font-size: 14px;
    backdrop-filter: blur(4px);
    pointer-events: none;
  }
</style>
